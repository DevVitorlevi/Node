<main>
    <link rel="stylesheet" href="/arquivos/form.css">
<main>
    <div class="container">
        <div>
            <h1>Criar Produto</h1>
        </div>
        <form action="/adicionar" method="POST">
        <input type="hidden" name="id" value="{{produto._id}}">
            <div class="inputs">
                <input type="text" name="nome"  class="input" required value="{{produto.nome}}">
                <label>Nome do Produto</label>
            </div>
            <div class="inputs">
                <input type="text" name="image"  class="input" required value="{{produto.image}}">
                <label>Imagem do Produto</label>
            </div>
            <div class="inputs">
                <input type="number" name="preco"  class="input" required min="0" step="0.01" value="{{produto.preco}}">
                <label>Preco do Produto</label>
            </div>
            <div class="inputs">
                <input type="text" name="descricao"  class="input textarea" required placeholder="Descreva o Produto" value="{{produto.descricao}}"> 
            </div>
            <button type="submit">Criar</button>
        </form>
    </div>
</main> 
</main>