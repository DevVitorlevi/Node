<link rel="stylesheet" href="/css/style.css">
<div class="container">
    <h1>Edite um Livro</h1>


    <form action="/livro/updatelivro" method="POST" id="form">
        <input type="hidden" value="{{livro.id}}" name="id"><!--Um campo oculto que armazena o ID do livro, permitindo que o backend identifique qual livro está sendo editado.-->
        <div class="inputs">
            <input type="text" name="titulo" id="input" placeholder="Titulo:" value="{{livro.titulo}}">
            
        </div>
        <div class="inputs">
            <input type="number" name="paginas" id="input" placeholder="Páginas:" value="{{livro.paginas}}">
            
        </div>
        
            <div class="buttons">
                <button type="submit">Editar</button>
                <button type="button"><a href="/livros">Voltar</a></button>
            </div>
        </form>
    </div>
</div>