<link rel="stylesheet" href="/arquivos/style.css">
<main>
    <div class="container">
        <div>
            <h1>Editar Tarefa</h1>
        </div>
        <form action="/tarefa/atualizar" method="POST">
            <div class="inputs">
                <input type="hidden" name="id" value="{{tarefa.id}}">
                <input type="text" name="titulo"  class="input" required value="{{tarefa.titulo}}">
                <label>O Que Vai Fazer hoje?</label>
            </div>
            <div class="inputs">
                <input type="text" name="descricao"  class="input textarea" required placeholder="Descreva a Tarefa" value="{{tarefa.descricao}}">
            </div>
            <button type="submit">Editar</button>
        </form>
    </div>
</main> 