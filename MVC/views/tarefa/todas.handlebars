<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="/arquivos/tarefas.css">
<h1>Todas As Tarefas</h1>
{{#each tarefas}}
    
<section>
    <div class="tarefas">
        {{#if this.feita}}
            <h1 class="done">{{this.titulo}}</h1>
        {{else}}
            <h1>{{this.titulo}}</h1>
        {{/if}}
                    <p>{{this.descricao}}</p>
                    <div class="actions">
                        <form action="/tarefa/statustarefa" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="hidden" name="feita" value="{{this.feita}}">
                            <button id="verde"><i class="bi bi-check-lg"></i></button>
                            </form>
                        <form action="/tarefa/apagar" method="POST">
                        <input type="hidden"  name="id" value="{{this.id}}">
                        <button type="submit" id="vermelho"><i class="bi bi-trash-fill"></i></button>
                        </form>
                        <button id="azul"><a href="/tarefa/editar/{{this.id}}"><i class="bi bi-pen-fill"></i></a></button>
                    </div>
                
        </ul>
    </div>
        {{/each}}
</section>